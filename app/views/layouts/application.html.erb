<!DOCTYPE html>
<html>
  <head>
    <title>Bedfast</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS_API_KEY']}" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <link rel="icon" type="image/x-icon" href="<%= image_url('favicon.png') %>">

    <script type="text/javascript"> // store static images
      window.background = "<%= image_url('splash.jpg') %>";
      window.logo = "<%= image_url('logo.png') %>";
      window.favicon = "<%= image_url('favicon.png') %>";
      window.default_profile_pic = "<%= image_url('default_profile_pic.png') %>";
      window.inspiration1 = "<%= image_url('inspiration1.jpg') %>";
      window.inspiration2 = "<%= image_url('inspiration2.jpg') %>";
      window.inspiration3 = "<%= image_url('inspiration3.jpg') %>";
      window.inspiration4 = "<%= image_url('inspiration4.jpg') %>";
      window.questions = "<%= image_url('questions.jpg') %>";
      window.placeholder = "<%= image_url('placeholder.png') %>";
      window.mapicon = "<%= image_url('mapicon.png') %>";
      window.roundedRectangle = "<%= image_url('roundedRectangle.png') %>";
    </script>

    <style>
      body {
        font-family: 'Montserrat', sans-serif;
      }
      ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        font-family: 'Montserrat', sans-serif;
      }
    </style>

  </head>

  <body>

  <% if current_user%>
    <script>
      window.currentUser = {
        id: <%= current_user.id%>,
        email: '<%= current_user.email %>',
        fname: '<%= current_user.fname %>',
        lname: '<%= current_user.lname %>',
      }
    </script>
    <% else %>
    <script>
      window.currentUser = null;
    </script>
  <% end %>

    <%= yield %>
  </body>
</html>
