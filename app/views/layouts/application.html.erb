<!DOCTYPE html>
<html>
  <head>
    <title>Bedfast</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

  <% if current_user%>
    <%=current_user.fname%>
    <script>
      window.currentUser = {
        id: <%= current_user.id%>,
        email: '<%= current_user.email %>',
        fname: '<%= current_user.fname %>',
        lname: '<%= current_user.lname %>',
      }
    </script>
    <% else %>
    <script>
      window.currentUser = null;
    </script>
  <% end %>

    <%= yield %>
  </body>
</html>
